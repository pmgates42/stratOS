{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Debug with Makefile",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/test/unit/ssched/bin/unit_test_ssched",  // Path to the executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,  // Set to true if you want to use an external console
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "unit test",  // Task to build the project before launching
            "miDebuggerPath": "/usr/local/bin/gdb",  // Path to GDB
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            },
            "targetArchitecture": "x86_64"
        }
    ]
}
